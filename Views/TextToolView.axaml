<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="SmartToolbox.Views.TextToolView">
             
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei UI, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#005A9B"/>
        </Style>
        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#004578"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <!-- 文本输入区域 -->
            <StackPanel Spacing="8">
                <TextBlock Text="输入文本:" FontWeight="Medium" FontSize="14"/>
                <TextBox Name="InputTextBox" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         Height="120" 
                         Watermark="请输入要处理的文本..."
                         FontFamily="Consolas, monospace"/>
            </StackPanel>

            <!-- 操作按钮区域 -->
            <StackPanel Spacing="10">
                <TextBlock Text="文本操作:" FontWeight="Medium" FontSize="14"/>
                <WrapPanel>
                    <Button Margin="0,0,10,5" 
                            Padding="12,8" 
                            MinWidth="80"
                            Click="ToUpperCase">
                        <TextBlock Text="转为大写" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontFamily="Microsoft YaHei UI"/>
                    </Button>
                    <Button Margin="0,0,10,5" 
                            Padding="12,8" 
                            MinWidth="80"
                            Click="ToLowerCase">
                        <TextBlock Text="转为小写" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontFamily="Microsoft YaHei UI"/>
                    </Button>
                    <Button Margin="0,0,10,5" 
                            Padding="12,8" 
                            MinWidth="90"
                            Click="ToTitleCase">
                        <TextBlock Text="首字母大写" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontFamily="Microsoft YaHei UI"/>
                    </Button>
                    <Button Margin="0,0,10,5" 
                            Padding="12,8" 
                            MinWidth="80"
                            Click="TrimSpaces">
                        <TextBlock Text="去除空格" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontFamily="Microsoft YaHei UI"/>
                    </Button>
                    <Button Margin="0,0,10,5" 
                            Padding="12,8" 
                            MinWidth="80"
                            Click="CountWords">
                        <TextBlock Text="统计字数" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontFamily="Microsoft YaHei UI"/>
                    </Button>
                    <Button Margin="0,0,10,5" 
                            Padding="12,8" 
                            MinWidth="80"
                            Click="ClearText">
                        <TextBlock Text="清空文本" 
                                   Foreground="Red" 
                                   FontSize="14" 
                                   FontFamily="Microsoft YaHei UI"/>
                    </Button>
                </WrapPanel>
            </StackPanel>

            <!-- 结果显示区域 -->
            <StackPanel Spacing="8">
                <TextBlock Text="处理结果:" FontWeight="Medium" FontSize="14"/>
                <TextBox Name="OutputTextBox" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         Height="120" 
                         IsReadOnly="True"
                         FontFamily="Consolas, monospace"
                         Background="#F8F8F8"/>
            </StackPanel>

            <!-- 文本统计信息 -->
            <StackPanel Spacing="8">
                <TextBlock Text="统计信息:" FontWeight="Medium" FontSize="14"/>
                <Border Background="#F5F5F7" 
                        CornerRadius="5" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Name="CharCountText" Text="字符数: 0"/>
                        <TextBlock Name="WordCountText" Text="单词数: 0"/>
                        <TextBlock Name="LineCountText" Text="行数: 0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl> 